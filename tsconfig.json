{
	"compilerOptions": {
		"target": "ES6",
		"module": "ES6",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "src/**/*.test.ts"]
}